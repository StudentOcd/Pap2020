@model IEnumerable<Pap2020.Models.Relatorio>

@{
    ViewBag.Title = "Menu Relatórios";
}

<h2>Menu dos Relatórios</h2>

<p>
    @Html.ActionLink("Criar Relatório", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome_empresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NIF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email_empresa)
        </th>
      
  
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome_empresa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NIF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email_empresa)
        </td>

    
        <td>
            @if (Convert.ToInt32(Session["Tipo"]) == 3)
            {
                @Html.ActionLink("Detalhes", "Details", new { id = item.id_relatorio })
                
            
                @Html.ActionLink("Faltas", "Index", "Faltas", new { id = item.id_relatorio }, htmlAttributes: null)
            }

            @if (Convert.ToInt32(Session["Tipo"]) == 2)
            {

                @Html.ActionLink("Detalhes", "Details", new { id = item.id_relatorio })
            }
            @if (Convert.ToInt32(Session["Tipo"]) == 1)
            {
                @Html.ActionLink("Editar", "Edit", new { id = item.id_relatorio })
                @Html.ActionLink("Detalhes", "Details", new { id = item.id_relatorio })
                @Html.ActionLink("Apagar", "Delete", new { id = item.id_relatorio })
            }
           

        </td>
    </tr>
}

</table>
