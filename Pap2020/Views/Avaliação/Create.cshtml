@model Pap2020.Models.Avaliação

@{
    ViewBag.Title = "Create";
}

<h2>Avaliar</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Avaliação</h4>
    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.avaliacaoprofessor, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.avaliacaoprofessor, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.avaliacaoprofessor, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.avaliacaomonitor, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.avaliacaomonitor, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.avaliacaomonitor, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.avaliacaofinal, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.avaliacaofinal, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.avaliacaofinal, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.id_relatorio, "id_relatorio", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("id_relatorio", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.id_relatorio, "", new { @class = "text-danger" })
        </div>
    </div>
    <br/>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Voltar atrás", "Index")
</div>
