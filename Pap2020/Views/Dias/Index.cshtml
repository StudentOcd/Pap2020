@model IEnumerable<Pap2020.Models.Dia>

@{
    ViewBag.Title = "Index";
}

    <h2>Registo Diário</h2>
<br/>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.data_hora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.conteudo)
        </th>
        
    </tr>
   
@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.data_hora)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.conteudo)
    </td>

   
    <td>
        @if (Convert.ToInt32(Session["Tipo"]) == 1)

        {
            @Html.ActionLink("Editar", "Edit", new { id = item.data_hora.ToString("dd-MM-yyyy") })
            <br />
            @Html.ActionLink("Detalhes", "Details", new { id = item.data_hora })
            <br />
            @Html.ActionLink("Apagar", "Delete", new { id = item.data_hora })
            }
            @if (Convert.ToInt32(Session["Tipo"]) == 2)
            {
                @Html.ActionLink("Editar", "Edit", new { id = item.data_hora })
                <br />
                @Html.ActionLink("Detalhes", "Details", new { id = item.data_hora })
                <br />
                @Html.ActionLink("Apagar", "Delete", new { id = item.data_hora })
            }
        </td>
</tr>
}

</table>
<p>
    @if (Convert.ToInt32(Session["Tipo"]) == 3)
    {
        @Html.ActionLink("Inserir registo diário", "Create")
    }
</p>
